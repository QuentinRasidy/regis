<body>
    <%- include('../includes/navigation.ejs') %>

    <main style="background: #f5f5f7; padding: 0;">
        <% if (cameras.length > 0) { %>
        <div class="grid" style="position: relative;">
            <% var c = 1 %>
            <% for (let camera of cameras) { %>
