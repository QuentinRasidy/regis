        <div id="hdmiMatrixInfoModal" class="modal">
            <div class="modal-content" style="width: 50%; max-width: none; min-width: 45rem;">
                <span class="close">&times;</span>
                <h2 class="camera__title">Edit HDMI matrix information</h2>
                <br>
                <form id="matrixForm" action="/updateMatrixInfo" method="POST">
                    <div style="display: flex; flex-direction: row; justify-content: space-around;">
                        <div>
                            <% for ([index, output] of hdmiMatrixInfo.outputs.entries()) { %>
                                <div class="form-modal">
                                    <label for="labelOutput<%= index + 1 %>">Label for output <%= index + 1 %>: </label>
                                    <input type="text" name="labelOutput<%= index + 1 %>" id="labelOutput<%= index + 1 %>" value="<%= output.label %>" required>
                                </div>
                            <% } %>
                        </div>
                        <div>
                            <% for ([index, input] of hdmiMatrixInfo.inputs.entries()) { %>
                                <div class="form-modal">
                                    <label for="labelInput<%= index + 1 %>">Label for input <%= index + 1 %>: </label>
                                    <input type="text" name="labelInput<%= index + 1 %>" id="labelInput<%= index + 1 %>" value="<%= input.label %>" required>
                                </div>
                            <% } %>
                        </div>
                    </div>
                    <div class="form-modal">
                        <input id="updateCodecInfoBtn" class="little-button" type="submit" value="Update">
