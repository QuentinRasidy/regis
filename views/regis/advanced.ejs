        </div>

        <div style="display: flex;flex-direction: column; align-items: center;padding: 2%;">
                <div style="display: flex; width: 100%; justify-content: center;">
                        <button id="myBtn" class="little-button" style="margin-bottom: 0%;">Create New Demo <i class="fas fa-plus"></i></button>
                        <label style="margin-left: 10px; margin-right: 10px;">OR</label>
                        <label for="demoChoose" style="margin-right: 5px; font-weight: bold;">Choose the Demo Package</label>
                        <select name="demoChoose" id="demoChoose" style="width: 8%; text-align: center; padding: 2px;">
                        <% for (let demo of demoList) { %>
                            <% if (demoName == demo.name){%>
                            <option value="<%=demo._id%>" selected> <%=demo.name%> </option>
                            <%} else {%>
                            <option value="<%=demo._id%>"> <%=demo.name%> </option>
                            <% }%>
                        <% } %>
                        </select>
                </div>
            <label for="saveName">Scene Name: </label>
            <input id="saveName" type="text" name="saveName" style="margin-bottom: 1%">
            <button id="btnSaveAll" class="little-button">Save All <i class="fas fa-save"></i></button>
        </div>

        <div id="myModal" class="modal">

            <!-- Modal content -->
            <div class="modal-content">
                <span class="close">&times;</span>
                <p>Choose a Name for the Demo</p>
                <form action="/admin/addDemo" method="POST">
                    <input type="text" id="demoName" name="demoName">
                    <input class="little-button" type="submit" value="Add">
                </form>
            </div>

        </div>

        <div id="cameraInfoModal" class="modal">
            <div class="modal-content">
                <span class="close">&times;</span>
                <h2 class="camera__title">Edit camera information</h2>
                <br>
                <form action="/updateCamera" method="POST" class="form-modal">
                    <input type="text" name="cameraOldIp" id="cameraOldIp" hidden>
                    <div class="form-modal">
                        <label for="cameraName">Change camera name: </label>
                        <input type="text" name="cameraName" id="cameraName" required>
                    </div>
                    <div class="form-modal">
                        <label for="cameraDescription">Change camera description: </label>
                        <input type="text" name="cameraDescription" id="cameraDescription" required>
                    </div>
                    <div class="form-modal">
                        <label for="cameraIp">Change camera ip: </label>
                        <input type="text" name="cameraIp" id="cameraIp" required>
                    </div>
                    <div class="form-modal">
                        <input id="updateCameraInfoBtn" class="little-button" type="submit" value="Update">
                    </div>
                </form>
              </div>
        </div>

        <div id="codecInfoModal" class="modal">
            <div class="modal-content">
                <span class="close">&times;</span>
                <h2 class="camera__title">Edit codec information</h2>
                <form action="/updateCodecInfo" method="POST" class="form-modal">
                    <br>
                    <h3 style="text-decoration: underline;">General info</h3>
                    <div class="form-modal">
                        <label for="codecName">Codec name: </label>
                        <input type="text" name="codecName" id="codecName" value="<%=codecInfo.name%>" required>
                    </div>
                    <div class="form-modal">
                        <label for="codecIp">Codec ip: </label>
                        <input type="text" name="codecIp" id="codecIp" value="<%=codecInfo.ip%>" required>
