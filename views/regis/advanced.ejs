    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="/js/modal.js"></script>
    <script>
        $(document).ready(function () {
            var cameras = <%-JSON.stringify(cameras)%> ;
            var krammerConfig = <%-JSON.stringify(krammerConfig)%>;
            for (let index = 0; index < cameras.length; index++) {
                const camera = cameras[index];
                $(`#image${index + 1}`).attr('src', "http://" + camera.ip + "/cgi-bin/camera");
            }

            //KRAMMER CELL COLORATION//
            console.log(krammerConfig);
            if( krammerConfig.length > 0){
                console.log(krammerConfig[0].input);
                var str = ""
                Array.prototype.forEach.call(krammerConfig, element => {
                    str = "#cell" + element.output + "-" + element.input;
                    console.log(str);
                    $(str).css("background-color", "yellow");
                });
            }
            else{
                $( "#grid" ).replaceWith( "<h2 style='color:red'>Krammer API not available...</h2><p>Check on websvr2 the service called <b>_DEV_KrammerAPI</b></p>" );
                window.alert("Krammer API do not respond... Check on websvr2 the service called _DEV_KrammerAPI")
            }

            //END KRAMMER CELL COLORATION//

            //GET & SET SX80 STATUS//
            var $form = $('#source_selection');
            var shareForm = $('#share_selection');
            var buttons = $form.find(":submit").css("background-color", "#ff0000c9");
            var shareButtons = shareForm.find(":submit").css("background-color", "#ff0000c9");
            var codecStatus = "<%=sx80Config.codecStatus%>";
            
            if(codecStatus === "ok"){
             //ici je cherche à trouver quel btn correspond a la mainVideoSource et je le met en vert
                for (let index = 0; index < buttons.length; index++) {
                    if (buttons[index].value === "<%=sx80Config.mainVideoSource%>") {
                        buttons[index].style.backgroundColor = "#42c542";
                        $('#mainVideoSource').val(buttons[index].value);
                    }
                }
                if ("<%=sx80Config.shareSource%>" != "Not_Sending") {
                    $('#btnStopSharing').show();
                    for (let index = 0; index < shareButtons.length; index++) {
                        if (shareButtons[index].value === "<%=sx80Config.shareSource%>") {
                            shareButtons[index].style.backgroundColor = "#42c542";
                            $('#shareSource').val(shareButtons[index].value);
                        }
                    }
                }
            }
            else{
                window.alert("The codec is not responding ! Check IP adress")
            }


            /*If camera feedback not loading*/
            $("img").on("load", function () {
                var ip = $(this).data('ip');
                console.log("load")
                if($(this).attr('src') === "./images/no-video.png"){
                    $(this).closest('.camera-item').css({"filter":"none", "pointer-events":"all"});
                    $(this).closest('.camera-item').find('.controller').css({"filter":"grayscale(1)", "pointer-events":"none"});
                    setTimeout(() => {
                        window.alert(`Cannot find the camera ${ip} !`);
                    }, 500);
                }
                else{
                    $(this).closest('.camera-item').find('.controller').css({"filter":"none", "pointer-events":"all"});
                    $(this).closest('.camera-item').css({"filter":"none", "pointer-events":"all"});
                }
            });

            $("img").on("error", function () {
                $(this).attr("src", "./images/no-video.png");  
            });

            /* Check Device Type (touch or mouse) */
            var isTouchSupported = "ontouchend" in document; //boolean
            var myDown = isTouchSupported ? "touchstart" : "mousedown";
            var myUp = isTouchSupported ? "touchend" : "mouseup";

            $('.clickable').click(function () {
                col = $(this).parent().children().index($(this));
                row = $(this).parent().parent().children().index($(this).parent());
                const nbCell = 8;
                for (let index = 0; index <= nbCell; index++) {
                    $("#cell" + col + "-" + index).css("background-color", "");
                }
                $(this).css("background-color", "yellow");
                const data = "input=" + row + "&" + "output=" + col;
                console.log(col, row);
                $.ajax({
                    url: '/setInOut',
                    type: 'post',
                    data: data,
                    success: function () {}
                });
            });

            $("div[id^='advanced-button']").click(function () {
                var elem_id = $(this).data('num');
                var element = $("#advanced-container" + elem_id)
                if (element.is(':visible')) {
                    element.hide("slow");
                } else {
                    element.show("slow");
                }

            });

            $("span[id^='refresh_img']").click(function () {
                var ip = $(this).data('ip');
                var id_name_image = $(this).data('img');
                console.log("refresh", ip, id_name_image);
                //In the src attribut I use ?time argument to force browser to reload the image
                //In fact Safari and Firefox doesn't reload the img if the src link do not change
                $("#" + id_name_image).attr('src', "http://" + ip + "/cgi-bin/camera" + "?time=" + new Date().getTime());
            });

            $("button[id^='button-center']").click(function () {
                console.log('center');
                var ip = $(this).data('ip');
                $.ajax({
                    url: '/center/' + ip,
                    type: 'get',
                    success: 'success',
                });
            });

            /** Edit camera information modal JS**/
            var cameraModal = document.getElementById("cameraInfoModal");
            var closeBtn = document.getElementsByClassName("close")[1];
            closeBtn.onclick = function () {
                cameraModal.style.display = "none";
            }

            $('.edit_camera').on('click', function (e) {
                e.preventDefault();
                var ip = $(this).data('ip');
                var name = $(this).data('name');
                var description = $(this).data('description');
                $('input[name="cameraOldIp"]').val(ip);
                $('input[name="cameraName"]').val(name);
                $('input[name="cameraDescription"]').val(description);
                $('input[name="cameraIp"]').val(ip);
                cameraModal.style.display = "flex";
                console.log("clicked", ip);
            });

            $('#updateCameraInfoBtn').on('click', function (e) {
                cameraModal.style.display = "none";
            });
            /** End **/

            /** Edit codec information modal JS**/
            var codecModal = document.getElementById("codecInfoModal");
            var closeCodecBtn = document.getElementsByClassName("close")[2];
            closeCodecBtn.onclick = function () {
                codecModal.style.display = "none";
            }

            $('#editCodecBtn').on('click', function (e) {
                codecModal.style.display = "flex";
            });
            /** End **/

            /** Edit HDMI matrix information modal JS**/
            var matrixModal = document.getElementById("hdmiMatrixInfoModal");
            var closeMatrixBtn = document.getElementsByClassName("close")[3];
            closeMatrixBtn.onclick = function () {
                matrixModal.style.display = "none";
            }

            $('#editMatrixBtn').on('click', function (e) {
                matrixModal.style.display = "flex";
            });

            var $matrixForm = $('#matrixForm');
            var initialState = $matrixForm.serialize();
            var initialValues = $matrixForm.serializeArray()
            
            $matrixForm.submit(function (e) {
            e.preventDefault();
            if (initialState === $matrixForm.serialize()) {
                console.log('Form is unchanged!');
            } else {
                console.log('Form has changed!');
                var currentValues = $matrixForm.serializeArray();
                const newOutputs = currentValues.filter(v => v.name.includes("Output")).map(e =>  ({number: e.name.substr(e.name.length - 1), label : e.value}) );
                const newinputs = currentValues.filter(v => v.name.includes("Input")).map(e =>  ({number: e.name.substr(e.name.length - 1), label : e.value}) );

                const dataToSend = {outputs: newOutputs, inputs: newinputs }

                $.ajax({
                    url: '/updateMatrixInfo/',
                    type: 'POST',
                    data: {changedValues: JSON.stringify(dataToSend)},
